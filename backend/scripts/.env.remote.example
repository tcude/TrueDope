# SECURITY NOTE: Never commit .env.remote to version control!

REMOTE_DB_HOST=your-database-host.com
REMOTE_DB_PORT=5432
REMOTE_DB_NAME=truedope
REMOTE_DB_USER=truedope_user
REMOTE_DB_PASSWORD=your_secure_password

